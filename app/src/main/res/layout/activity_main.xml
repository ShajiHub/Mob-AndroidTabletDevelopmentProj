<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E1D02"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/sample_text"
        android:layout_width="450dp"
        android:layout_height="132dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/chela_one"
        android:shadowColor="@color/black"
        android:shadowDx="-4"
        android:shadowDy="-2"
        android:shadowRadius="1"
        android:text="Food App"
        android:textAlignment="center"
        android:textColor="#E3B143"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="600dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-smallcaps"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-4"
        android:shadowDy="-2"
        android:shadowRadius="1"
        android:text=" Enjoy cooking"
        android:textAlignment="center"
        android:textColor="#DCC653"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sample_text" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="800dp"
        android:layout_height="700dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/cooking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/f1"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_marginStart="636dp"
        android:layout_marginTop="388dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/f1" />

    <ImageView
        android:id="@+id/f2"
        android:layout_width="66dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="48dp"
        android:alpha=".7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/f5" />

    <ImageView
        android:id="@+id/f3"
        android:layout_width="66dp"
        android:layout_height="58dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="28dp"
        android:alpha=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/f2" />

    <ImageView
        android:id="@+id/f4"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginEnd="332dp"
        android:layout_marginBottom="8dp"
        android:alpha=".7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/f3" />

    <ImageView
        android:id="@+id/f5"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="348dp"
        android:alpha=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/f4" />


</androidx.constraintlayout.widget.ConstraintLayout>